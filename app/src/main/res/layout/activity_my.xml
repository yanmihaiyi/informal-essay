<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/memory_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存已使用："
        android:textSize="12sp" />

    <TextView
        android:id="@+id/memory_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/memory_button"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/battery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memory_button"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>
    <Button
        android:id="@+id/pick_photo"
        android:layout_below="@+id/battery_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择照片"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/photo_image"
        android:layout_below="@+id/pick_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="20dp" />

</RelativeLayout>